@model List<EventEase.Models.Venues>

<h2>Venues Available</h2>
<br />

<br />
<table>
    <tr>
        <th style="padding-right:10px; border : 2px solid Black">VenueID</th>
        <th style="padding-right:10px; border : 2px solid Black">VenueName</th>
        <th style="padding-right:10px; border : 2px solid Black">Location</th>
        <th style="padding-right:10px; border : 2px solid Black">Capacity</th>
        <th style="padding-right:10px; border : 2px solid Black">Picture</th>
        <th></th>
    </tr>

    @if (Model != null && Model.Any())
    {


        @foreach (var venue in Model)
        {
            <tr>
                <td style="padding-right:10px; border : 2px solid Black">@venue.VenueId</td>
                <td style="padding-right:10px; border : 2px solid Black">@venue.VenueName</td>
                <td style="padding-right:10px; border : 2px solid Black">@venue.Location</td>
                <td style="padding-right:10px; border : 2px solid Black">@venue.Capacity</td>
                <td style="padding-right:10px; border : 2px solid Black">@venue.Picture</td>
                <td>
                    <a asp-action="VenuesEdit" asp-route-id="@venue.VenueId">Edit</a> |
                    <a asp-action="VenuesDelete" asp-route-id="@venue.VenueId" onclick="return confirm('Are you sure you want to delete this venue?');">Delete</a>
                </td>
            </tr>
        }
    }
    else
    {
        <p>No Venues Added</p>
    }
</table>
<br />
<a asp-controller="Venues" asp-action="VenuesAdd" class="btn btn-primary"> Add Venues</a>
