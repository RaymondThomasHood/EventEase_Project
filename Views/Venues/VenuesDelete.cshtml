@model EventEase.Models.Venues

@{
    ViewData["Title"] = "Delete Venue";
}

<h2>Are you sure you want to delete this venue?</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.VenueId)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.VenueId)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.VenueName)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.VenueName)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Picture)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Picture)
        </dd>
    </dl>

    <form asp-action="VenuesDeleteConfirmed" method="post">
        <input type="hidden" asp-for="VenueId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="VenuesView" class="btn btn-secondary">Cancel</a>
    </form>
</div>
