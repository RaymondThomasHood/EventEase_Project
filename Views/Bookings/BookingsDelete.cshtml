@model EventEase.Models.Bookings

@{
    ViewData["Title"] = "Delete Booking";
}

<h3>Are you sure you want to delete this booking?</h3>
<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">BookingId</dt>
        <dd class="col-sm-10">@Model.BookingId</dd>
        <dt class="col-sm-2">EventId</dt>
        <dd class="col-sm-10">@Model.EventId</dd>
        <dt class="col-sm-2">VenueId</dt>
        <dd class="col-sm-10">@Model.VenueId</dd>
        <dt class="col-sm-2">BookingDate</dt>
        <dd class="col-sm-10">@Model.BookingDate</dd>
    </dl>
   
    <form asp-action="BookingsDeleteConfirmed" method="post">
        <input type="hidden" asp-for="BookingId" value="@(Model?.BookingId ?? 0)" />
        @Html.Raw($"<script>console.log('Submitting BookingId: {@Model.BookingId}');</script>")
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="BookingsView">Back to List</a>
    </form>
</div>
