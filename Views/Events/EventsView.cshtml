@model List<EventEase.Models.Events>

<h2>Events Available</h2>
<br />

<br />
<table>
    <tr>
        <th style="padding-right:10px; border : 2px solid Black">EventID</th>
        <th style="padding-right:10px; border : 2px solid Black">EventName</th>
        <th style="padding-right:10px; border : 2px solid Black">EventDate</th>
        <th style="padding-right:10px; border : 2px solid Black">Description</th>
        <th></th>
    </tr>

    @if (Model != null && Model.Any())
    {


        @foreach (var events in Model)
        {
            <tr>
                <td style="padding-right:10px; border : 2px solid Black">@events.EventId</td>
                <td style="padding-right:10px; border : 2px solid Black">@events.EventName</td>
                <td style="padding-right:10px; border : 2px solid Black">@events.EventDate</td>
                <td style="padding-right:10px; border : 2px solid Black">@events.Description</td>
                <td>
                    <a asp-action="EventsEdit" asp-route-id="@events.EventId">Edit</a> |
                    <a asp-action="EventsDelete" asp-route-id="@events.EventId" onclick="return confirm('Are you sure you want to delete this event?');">Delete</a>
                </td>
            </tr>
        }
    }
    else
    {
        <p>No Events Added</p>
    }
</table>
<br />
<a asp-controller="Events" asp-action="EventsAdd" class="btn btn-primary"> Add Events</a>
